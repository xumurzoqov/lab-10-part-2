#include <iostream>
#include <stdlib.h>
using namespace std;
long long sumArray(int* arr, int size) {
    long long sum = 0;
    for (int i = 0; i < size; i++) {
        sum += *(arr+i);
    }
    return sum;
}
int main() {
    srand(time(NULL));
    int a[1000];
    for (int i = 0; i < 1000; i++) {
        a[i] = rand()%100;
    }

    cout << "Sum: " <<sumArray(a, 1000) << endl;

    return 0;
}
