#include <iostream>
#include <stdlib.h>
using namespace std;

int main() {
    srand(time(NULL));
    int a[10];
    for (int i = 0; i < 10; i++) {
        a[i] = rand()%100;
    }

    int *ptrA = a;
    for (int i = 0; i < 10; i++) {
        cout << "The address of " << i+1 << " element " << ptrA << endl;
        cout << "The value of " << i+1 << "element = " << *ptrA << endl;
        ptrA++;
    }


    return 0;
}
